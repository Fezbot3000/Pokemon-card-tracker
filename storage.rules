rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Backups used by CloudSyncService
    // Paths: backups/{userId}/metadata.json, backups/{userId}/collections.json, backups/{userId}/images/{imageName}
    match /backups/{userId}/{allFiles=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Card images used by DatabaseAdapter and CardRepository
    // Paths: users/{userId}/cards/{cardId}(.jpg|.png)
    match /users/{userId}/cards/{cardFile=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Legacy/Functions-based image path used by storeCardImage function
    // Paths: images/{userId}/{cardId}.jpeg
    match /images/{userId}/{allFiles=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
