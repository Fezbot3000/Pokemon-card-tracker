{
  "name": "pokemon-card-tracker",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://www.mycardtracker.com.au",
  "dependencies": {
    "@react-pdf/renderer": "^4.3.0",
    "@stripe/stripe-js": "^7.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "chart.js": "^4.4.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "file-saver": "^2.0.5",
    "firebase": "^10.8.0",
    "firebase-admin": "^13.4.0",
    "jszip": "^3.10.1",
    "leaflet": "^1.9.4",
    "papaparse": "^5.5.2",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.5.2",
    "react-intersection-observer": "^9.16.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^7.5.1",
    "react-scripts": "5.0.1",
    "stripe": "^18.3.0",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "build:prod": "set \"GENERATE_SOURCEMAP=false\" && set \"NODE_OPTIONS=--max-old-space-size=4096\" && craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "npm run build && firebase deploy",
    "deploy:fast": "npm run build:prod && firebase deploy --non-interactive",
    "deploy:hosting": "npm run build:prod && firebase deploy --only hosting --non-interactive",
    "deploy:functions": "firebase deploy --only functions --non-interactive",
    "clean": "rimraf node_modules/.cache && rimraf build",
    "firebase-init": "firebase init",
    "firebase-deploy": "firebase deploy --non-interactive",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "optimize:images": "echo \"For image optimization, consider using tools like imagemin, squoosh-cli, or online tools like TinyPNG for the files in public/screenshots/\"",
    "performance": "npm run build:prod && echo \"Build complete! Test performance with Lighthouse or WebPageTest\"",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx} --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,json}",
    "type-check": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.17",
    "cssnano": "^7.0.7",
    "dotenv": "^16.4.7",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "firebase-tools": "^14.1.0",
    "gh-pages": "^6.3.0",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.35",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "prop-types": "^15.8.1",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.1",
    "typescript": "^4.9.5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
